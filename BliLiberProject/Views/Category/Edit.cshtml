@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edito kategori</h2>  
            <hr />
        </div>   
      @*  <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name" >Emri i kategorisë</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" >Renditja</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Përditëso</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:250px">
            Ktheu te kategoritë
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

